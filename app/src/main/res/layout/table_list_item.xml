<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txtsrno"
        android:layout_width="56dp"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:background="@drawable/tableitembg"
        android:text="SrNo"
        android:paddingStart="4dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/txtpname"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:background="@drawable/tableitembg"
        android:text="Product Name\n\n"
        android:paddingStart="4dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/txtit"
        android:layout_width="85dp"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:background="@drawable/tableitembg"
        android:text="Item Type"
        android:paddingStart="4dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/txtdd"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:background="@drawable/tableitembg"
        android:text="Dispatch Date"
        android:textAlignment="center"
        android:paddingStart="4dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/txtcname"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@drawable/tableitembg"
        android:text="Courier Name"
        android:textAlignment="center"
        android:paddingStart="4dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/txtdno"
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:background="@drawable/tableitembg"
        android:text="Docket No"
        android:textAlignment="center"
        android:paddingStart="4dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/txtdqty"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:background="@drawable/tableitembg"
        android:text="Dispatch Qty"
        android:textAlignment="center"
        android:paddingStart="4dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/txtrqtyd"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:background="@drawable/tableitembg"
        android:text="Rec Qty For Dr."
        android:textAlignment="center"
        android:paddingStart="4dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/txtrqtys"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:background="@drawable/tableitembg"
        android:text="Rec Qty For Self"
        android:textAlignment="center"
        android:paddingStart="4dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/txttqty"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:background="@drawable/tableitembg"
        android:text="Tot Rec Qty"
        android:textAlignment="center"
        android:paddingStart="4dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/txtrqtyse"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:background="@drawable/tableitembg"
        android:text="Rec Qty (Short/Excess)"
        android:textAlignment="center"
        android:paddingStart="4dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/txtrqtydate"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:background="@drawable/tableitembg"
        android:text="Rec Date (DD/MM/YYYY)"
        android:textAlignment="center"
        android:paddingStart="4dp"
        android:textSize="18sp"/>
</LinearLayout>